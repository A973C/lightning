{
  "name": "lightning",
  "version": "0.0.4",
  "description": "Joomla 4 template using HiQ",
  "repository": {
    "type": "git",
    "url": "https://github.com/C-Lodder/lightening"
  },
  "license": "MIT",
  "scripts": {
    "postcss": "npm run __postcss-main && npm run __postcss-tab && npm run __postcss-modal && npm run __postcss-pagination",
    "__postcss-main": "postcss src/css/hiq.css -o css/template.css",
    "__postcss-tab": "postcss src/css/vendor/joomla-custom-elements/joomla-tab.css -o css/vendor/joomla-custom-elements/joomla-tab.css",
    "__postcss-modal": "postcss src/css/modal.css -o css/modal.css",
    "__postcss-pagination": "postcss src/css/pagination.css -o css/pagination.css"
  },
  "devDependencies": {
    "autoprefixer": "9.7.4",
    "cssnano": "4.1.10",
    "postcss": "7.0.27",
    "postcss-cli": "7.1.0",
    "postcss-custom-media": "7.0.8",
    "postcss-custom-selectors": "5.1.2",
    "postcss-discard-comments": "4.0.2",
    "postcss-easy-import": "3.0.0",
    "postcss-mixins": "6.2.3",
    "postcss-nested": "4.2.1"
  }
}
